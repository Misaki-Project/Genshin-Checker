<UserControl x:Class="Genshin_Checker.GUI.UserInterface.CentralPanel.Component.AreaInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Genshin_Checker.GUI.UserInterface.CentralPanel.Component"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:templete="clr-namespace:Genshin_Checker.GUI.StyleTemplete"
             xmlns:component="clr-namespace:Genshin_Checker.GUI.UserInterface.CentralPanel.Component"
             d:DesignWidth="500" d:MinWidth="200" d:MaxWidth="500">
    <Grid>
        <materialDesign:Card>
            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="https://act-webstatic.hoyoverse.com/game_record/genshin/city_icon/UI_ChapterCover_Fengdan.png" Stretch="UniformToFill"
Opacity="1"/>
                </Grid.Background>
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" >
                        <Button
  materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
  materialDesign:ButtonProgressAssist.Value="50"
  IsEnabled="True" materialDesign:RippleAssist.IsDisabled="True"
  Style="{StaticResource MaterialDesignFloatingActionButton}"
                        Width="80" Height="80"
                        Margin="4">
                            <Button.Background>
                                <ImageBrush ImageSource="https://act-webstatic.hoyoverse.com/game_record/genshin/city_icon/UI_ChapterIcon_Fengdan.png"/>

                            </Button.Background>
                        </Button>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="50.0%" HorizontalAlignment="Center" 
           Margin="8,0,0,0" FontSize="15" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Text="フォンテーヌ" VerticalAlignment="Center" 
                               Margin="8,0,0,0" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <materialDesign:Chip Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent" IconBackground="Transparent">
                        <materialDesign:Chip.Icon>
                            <Image Source="https://act.hoyoverse.com/map_manage/20230712/4a485e26d82e5eed5f8129e4cff72e7b_270527679071922724.png"/>
                        </materialDesign:Chip.Icon>
                        <materialDesign:Chip.Content>
                            <TextBlock Text="x 123" Foreground="white" FontSize="20"/>
                        </materialDesign:Chip.Content>
                    </materialDesign:Chip>
                    <materialDesign:Chip Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right" Background="Transparent" IconBackground="Transparent">
                        <materialDesign:Chip.Icon>
                            <Image Source="https://act-webstatic.hoyoverse.com/map_manage/20240726/c59585d1fabc9c22ad3fcf94e1622aa8_357413506633071859.png"/>
                        </materialDesign:Chip.Icon>
                        <materialDesign:Chip.Content>
                            <TextBlock Text="Lv. 10" Foreground="white" FontSize="20"/>
                        </materialDesign:Chip.Content>
                    </materialDesign:Chip>
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Separator/>
                        <WrapPanel Orientation="Horizontal">
                            <materialDesign:Chip IconBackground="Transparent">
                                <materialDesign:Chip.Icon>
                                    <Image Source="https://static-api.misaki-chan.world/genshin-checker/asset/game-records/ys_world_level.png"/>
                                </materialDesign:Chip.Icon>
                                <materialDesign:Chip.Content>
                                    <TextBlock Text="評判Lv. 10" Foreground="white" FontSize="20"/>
                                </materialDesign:Chip.Content>
                            </materialDesign:Chip>
                        </WrapPanel>
                        <Separator Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PopupBox Grid.Column="2" Grid.Row="0" >
                                <materialDesign:PopupBox.ToggleContent>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="良い感じの地名" Foreground="white" Grid.Column="0" FontSize="18"/>
                                        <materialDesign:PackIcon Kind="HelpCircleOutline" Foreground="White" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </materialDesign:PopupBox.ToggleContent>
                            </materialDesign:PopupBox>
                            <TextBlock Text="25.6 %" Foreground="white" Grid.Column="3" FontSize="15" VerticalAlignment="Center"/>
                            <ProgressBar Height="5" Value="25.6" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,0,0,0"/>
                        </Grid>
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PopupBox Grid.Column="2" Grid.Row="0" >
                                <materialDesign:PopupBox.ToggleContent>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="良い感じの地名2" Foreground="white" Grid.Column="0" FontSize="18"/>
                                        <materialDesign:PackIcon Kind="HelpCircleOutline" Foreground="White" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </materialDesign:PopupBox.ToggleContent>
                            </materialDesign:PopupBox>
                            <TextBlock Text="66.7 %" Foreground="white" Grid.Column="3" FontSize="15" VerticalAlignment="Center"/>
                            <ProgressBar Height="5" Value="66.7" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,0,0,0"/>
                        </Grid>
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PopupBox Grid.Column="2" Grid.Row="0" >
                                <materialDesign:PopupBox.ToggleContent>
                                    <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="良い感じの地名3" Foreground="white" Grid.Column="0" FontSize="18"/>
                                    <materialDesign:PackIcon Kind="HelpCircleOutline" Foreground="White" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </materialDesign:PopupBox.ToggleContent>
                            </materialDesign:PopupBox>
                            <TextBlock Text="105.0 %" Foreground="white" Grid.Column="3" FontSize="15" VerticalAlignment="Center"/>
                            <ProgressBar Height="5" Value="105.0" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
            
            
        </materialDesign:Card>
    </Grid>
</UserControl>
